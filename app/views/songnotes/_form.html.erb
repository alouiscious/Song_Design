
<div class="songnote">

  <%= form_for @songnote do |f| %>
  <% if @songnote.song_id.nil? %>
    
  <p>Link this note to a song</p>    
    <%= select_tag "songnote[song_id]", options_from_collection_for_select(Song.all, :id, :title, params[:song_id].to_i) %>
  <% else %>
    <%= hidden_field_tag "songnote[song_id]", songnote.song_id %>
  <% end %>
  <br><br>
  <br>


    <%= f.label 'Topic: ' %>
    <%= f.text_field :title, width: 28 %> <br><br>
    <%= f.label "Note: " %>
    <%= f.text_area :content, rows: 7, cols: 28 %>
    <table>
      <td>
        <p>Category: </p>
      </td>
      <td>
        <%= f.radio_button(:category, "feature") %>
        <%= f.label(:category_feature, "Feature/Solo") %>
      </td>
      <td>
        <%= f.radio_button(:category, "design") %> 
        <%= f.label(:category_design, "Design/Structure") %>
      </td> 
  
    </table>

  <% if songnote.rehearsal_id.nil? %>
    <p>Link this note to a rehearsal</p>    
    <%= select_tag "songnote[rehearsal_id]", options_from_collection_for_select(Rehearsal.all, :id, :date) %>
  <% else %>
    <%= hidden_field_tag "songnote[rehearsal_id]", songnote.rehearsal_id %>
  <% end %>
    <%= hidden_field_tag "songnote[user_id]", current_user.id%>
  <br><br>
  <br><br>   
  <%= f.submit %>    | <%= button_to "Cancel", :back, {method: 'get'} %> <br>

  <% end %>
  <br>
  <br>

  </div>

