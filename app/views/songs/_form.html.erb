
<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>
  <%= f.label :key %>
  <%= f.text_field :key %> <br>
  <%= f.label :genre %>
  <%= f.text_field :genre %> <br>
  <%= f.label :in_style_of %>
  <%= f.text_field :in_style_of %> <br>

  <table>
    <td>
      Song Design Status:
    </td>
    <td>
      <%= f.radio_button(:status, "in use") %>
      <%= f.label(:status_yes, "In Use") %>
    </td>
    <td>
      <%= f.radio_button(:status, "not in use") %> 
      <%= f.label(:status_no, "Not In Use") %>
    </td>    
  </table>
  <br>
  <br>
  <%= f.submit %>
<% end %>
